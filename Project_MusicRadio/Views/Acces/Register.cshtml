@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Registro de usuario</title>
	<link href="~/css/login.css" rel="stylesheet" />
	<link href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" rel="stylesheet">
	<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
</head>
<body>
	<div class="container">
		<div class="d-flex justify-content-center h-100">
			<div class="card">
				<div class="card-body">
					<h3>Datos de registro</h3>
					<form action="@Url.Action("Register", "Acces")" method="post">
						<div class="input-group form-group">
							<div class="input-group-prepend">
								<span class="input-group-text"><i class="fas fa-user"></i></span>
							</div>
							<input type="text" name="NameUser" class="form-control" placeholder="Nombre completo">

						</div>
						<div class="input-group form-group">
							<div class="input-group-prepend">
								<span class="input-group-text"><i class="fas fa-envelope"></i></span>
							</div>
							<input type="text" name="Mail" class="form-control" placeholder="Correo electronico">

						</div>
						<div class="input-group form-group">
							<div class="input-group-prepend">
								<span class="input-group-text"><i class="fas fa-home"></i></span>
							</div>
							<input type="text" name="Adders" class="form-control" placeholder="Direccion de correspondencia">

						</div>
						<div class="input-group form-group">
							<div class="input-group-prepend">
								<span class="input-group-text"><i class="fas fa-phone"></i></span>
							</div>
							<input type="text" name="Phone" class="form-control" placeholder="Numero telefonico">

						</div>
						<div class="input-group form-group">
							<div class="input-group-prepend">
								<span class="input-group-text"><i class="fas fa-key"></i></span>
							</div>
							<input type="password" name="PassUser" class="form-control" placeholder="Contraseña">
						</div>
						<div class="input-group form-group">
							<div class="input-group-prepend">
								<span class="input-group-text"><i class="fas fa-key"></i></span>
							</div>
							<input type="password" name="PassComfirm" class="form-control" placeholder="Confirmar contraseña">
						</div>
						@if (ViewData["Message"] != null)
						{

							<div class="alert alert-danger" role="alert">
								@ViewData["Message"]
							</div>
						}
						<div class="form-group">
							<input type="submit" value="Registrate" class="btn float-right login_btn">
						</div>
					</form>
					<div class="d-flex justify-content-center links">
						¿Ya tienes una cuenta?<a href="@Url.Action("Login", "Acces")">Inicia sesion</a>
					</div>
				</div>
				<div class="card-footer">
				</div>
			</div>
		</div>
	</div>

</body>
</html>

